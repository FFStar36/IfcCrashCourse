<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <div class="row">
    <div class="col-11">
    <h1 style="display: inline-block">Your BIM-Models</h1>
    </div>
    <div class="col-1">
    <a class="btn btn-outline-secondary float-right" href="/ifcModel/new" style="right: 0">New</a>
    </div>
    </div>
    <% for (let model of ifcModel){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" alt=""
                     src="https://cdn.pixabay.com/photo/2018/12/14/21/29/sunset-3875817_960_720.jpg">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= model.title %> </h5>

                    <p class="card-text"><%= model.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= model.location%></small>
                    </p>
                    <a class="btn btn btn-secondary" href="/ifcModel/<%=model._id%>">Open BIM-Model: <%=model.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
